+++ b/libs/vss/vss_common.c
@@ -744,7 +744,7 @@ _closeDevice(VideoDevice * vd)
     //if (vd->mode_num){
         VS_IOCTL(fd, FBIOPUT_VSCREENINFO, done, &vd->fbvar);
